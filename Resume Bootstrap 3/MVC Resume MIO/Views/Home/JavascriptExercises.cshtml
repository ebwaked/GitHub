                    <div class="col-md-8">
                        <pre class="brush: js; ruler: true;">
function fizzBuzz() {
    var result = "";
    for (var i = 1; i <= 100; i++) {
        if (i % 5 !== 0 && i % 3 !== 0) {
            result += i + "<br />";
        }
        else if (i % 3 === 0 && i % 5 !== 0) {
            result += "Fizz" + "<br />";
        }
        else if (i % 5 === 0 && i % 3 !== 0) {
            result += "Buzz" + "<br />";
        }
        else {
            result += "FizzBuzz" + "<br />";
        }
    }
    $('#fizzBuzzAnswer').html(result);
}
                          </pre>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button onclick="fizzBuzz()">Print FizzBuzz Exercise</button>
                </div>
            </div>
        </div>
