@model IEnumerable<BudgetBoss.Models.HouseholdAccount>
@using BudgetBoss.Models;
@{
    ViewBag.Title = "Index";
}
<div id="wrapper">
    <div id="page-wrapper">
        <div class="container-fluid">
            <!-- Page Heading -->
            <div class="row">
                <h2>Household Accounts</h2>

                <p>
                    @Html.ActionLink("Create New Account", "Create")
                </p>
                             
                        <table class="table" id="table1">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Household.Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Balance)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ReconciledBalance)
                                    </th>
                                    <th>Links</th>
                                    <th></th>
                                </tr>
                            </thead>
                            @foreach (var item in Model)
                            {
                                <tbody>
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Household.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Balance)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ReconciledBalance)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                        </td>
                                        <td></td>
                                    </tr>
                                </tbody>
                            }

                        </table>
            </div>
        </div>
    </div>
</div>
<script>

        $('#table1').DataTable();
</script>