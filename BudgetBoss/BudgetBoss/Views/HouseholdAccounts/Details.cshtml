@model BudgetBoss.Models.HouseholdAccount

@{
    ViewBag.Title = "Details";
}
<div id="wrapper">
    <div id="page-wrapper">
        <div class="container-fluid">
            <!-- Page Heading -->
            <div class="row">
                <h2>Household Account Details</h2>

                <div>
                    <h4>HouseholdAccount</h4>
                    <hr />
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.Household.Name)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Household.Name)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Name)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Name)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Balance)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Balance)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.ReconciledBalance)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.ReconciledBalance)
                        </dd>

                    </dl>
                </div>
                <p>
                    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
                    @Html.ActionLink("Back to List", "Index")
                </p>
</div>
            <div class="row">
                <h2>Transactions</h2>
                <div class="col-md-1">
                    <div class="btn pull-left">
                        <a href="@Url.RouteUrl("transactionCreate", new { accountId = Model.Id })" class="glyphicon glyphicon-plus"> </a>
                    </div>
                </div>

                <table class="table" id="table1">
                    <thead>
                        <tr>
                            <th>
                                Name
                            </th>
                            <th>
                                Account Id
                            </th>
                            <th>
                                Amount
                            </th>
                            <th>
                                Absolute Amount
                            </th>
                            <th>
                                Reconciled Amount
                            </th>
                            <th>
                                Absolute Reconciled Amount
                            </th>
                            <th>
                                Date    
                            </th>
                            <th>
                                Description
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    
                        @foreach (var item in Model.Transactions)
                        {
                            <tbody>
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Category.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.HouseholdAccountId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Amount)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AbsAmount)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ReconciledAmount)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AbsReconciledAmount)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Date)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </td>
                                    <td></td>
                                </tr>
                            </tbody>
                        }
                            
                </table>
            </div>
</div>
</div>
</div>

@section Scripts {
<script>
   
        $('#table1').DataTable();
</script>

}
