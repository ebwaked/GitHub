@model IEnumerable<BudgetBoss.Models.Transaction>
@using System.Web.Http.Routing;

@{
    ViewBag.Title = "Index";
}
<div id="wrapper">
    <div id="page-wrapper">
        <div class="container-fluid">
            <!-- Page Heading -->
            <div class="row">
                <h2>Transactions</h2>
                <div class="col-md-12">
                    <div class="btn pull-left">
                        <a href="@Url.RouteUrl("transactionCreate", new { accountId = ViewBag.HouseholdAccountId})"><span class="fa fa-plus"></span></a>
                    </div>
                </div>

                <table id="transactionTable" class="display">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Category.Name)</th>
                            <th>@Html.DisplayNameFor(model => model.HouseholdAccountId)</th>
                            <th>@Html.DisplayNameFor(model => model.Amount)</th>
                            <th>@Html.DisplayNameFor(model => model.AbsAmount)</th>
                            <th>@Html.DisplayNameFor(model => model.ReconciledAmount)</th>
                            <th>@Html.DisplayNameFor(model => model.AbsReconciledAmount)</th>
                            <th>@Html.DisplayNameFor(model => model.Date)</th>
                            <th>@Html.DisplayNameFor(model => model.Description)</th>
                            <th>@Html.DisplayNameFor(model => model.Updated)</th>
                            <th>@Html.DisplayNameFor(model => model.UpdatedUserId)</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Category.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.HouseholdAccountId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Amount)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AbsAmount)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ReconciledAmount)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AbsReconciledAmount)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Date)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Updated)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UpdatedUserId)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                </td>
                                <td></td>
                            </tr>
                        }
                    </tbody>
                </table>

                </div>
            </div>
        </div>
    </div>
   @section Scripts {
    <script>
        $(document).ready(function () {
            $('#transactionTable').DataTable();
        });
    </script>
}
