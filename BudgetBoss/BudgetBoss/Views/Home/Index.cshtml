@{
    ViewBag.Title = "Home Page";
}

<style>
    .img-wrap{
		overflow: hidden;
		position: relative;
	} 
</style>
<div id="wrapper">
    <div id="page-wrapper">
        <div class="container-fluid">
            <!-- Page Heading -->
            <div class="row">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="alert alert-info alert-dismissable">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                            <i class="fa fa-info-circle"></i>  <strong>Like the Budget Boss?</strong> Tell your friends! <a href="http://ewaked-budgetBoss.azurewebsites.net" class="alert-link">Budget Boss</a> is free for them too!
                        </div>
                    </div>
                </div>
                <!-- /.row -->

                <div class="jumbotron">
                    <div class="row">
                        <div class="col-md-6 img-wrap" style="float: right">
                            <img src="/Content/Images/budgetBossHipster.png" alt="Budget Boss Logo">
                        </div>
                        <div class="col-md-6">
                            <h1 class="page-header">Budget Boss</h1>
                            <p class="lead">Be the boss of your budget!</p>
                            @if (!User.Identity.IsAuthenticated)
                            {
                                <p><a href="/Account/Login" class="btn btn-primary btn-lg">Login Here »</a></p>
                            }
                                <p></p>
                                <h3>Learn About Budgets</h3>
                                <h4>
                                    The Budget Boss gives you a powerful tool to build dynamic budgets that
                                    enables a clean course of action for your household and gives you full control
                                    over financial decisions for enjoyable living.
                                </h4>
                                <h4><a class="btn btn-default" href="/Home/GettingStarted">Learn More &raquo;</a></h4>
                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>