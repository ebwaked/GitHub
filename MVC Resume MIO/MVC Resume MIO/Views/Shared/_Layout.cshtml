<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Resume - MIO</title>

    <meta name="description" content="Resume Template">
    <meta name="author" content="kaylog">
    
    <!-- CSS -->
    <link href="/Content/css/bootstrap.min.css" rel="stylesheet" media="screen">
    <link href="/Content/css/bootstrap-responsive.min.css" rel="stylesheet" media="screen">
    <link href="/Content/css/style.css" rel="stylesheet">

    <!-- Javascript not available -->
    <noscript>
        <link href="/Content/css/noscript.css" rel="stylesheet">
    </noscript>


    [if lt IE 9]>
    <script src="~/Scripts/html5shiv.js"></script>
    <![endif]
    <!-- To select the black text uncomment the following line -->
     <link href="~/Content/css/dark.css" rel="stylesheet"> 
    <!-- To change the color of hover effects and links to green, you can uncomment the following line -->
     <!--<link href="~/Content/css/green.css" rel="stylesheet">-->
    <!-- To change the color of hover effects and links to orange, you can uncomment the following line -->
      <!--<link href="~/Content/css/orange.css" rel="stylesheet">-->

    <link href='http://fonts.googleapis.com/css?family=Droid+Sans:400,700' rel='stylesheet' type='text/css'>



    @Styles.Render("/Content/css")
    @Scripts.Render("/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
		<div class="navbar-inner">
            <div class="container">
            	<!-- This will display when the page is viewed on a mobile device -->
                <button type="button" class="btn btn-navbar" data-toggle="collapse" >
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                </button>                
              	<a class="brand me-name" href="#top">Edward Waked</a><!-- This text displays when the screen has been scrolled -->                
                <div class="nav-collapse collapse pull-right navigation">
                    <ul class="nav">
                      <li class="active first"><a href="#keypoints">Keypoints</a></li>
                      <li><a href="#experience">Work Experience</a></li>
                      <li><a href="#portfolio">Portfolio</a></li>
                      <li><a href="#education">Education</a></li>
                      <li><a href="#skills">Skills</a></li>
                      <li><a href="#contact">Contact Me</a></li>
                    </ul>
                </div><!-- nav-collapse -->
                
            </div><!-- container -->
		</div><!-- navbar-inner -->
    </div><!-- navbar -->
        @RenderBody()
    <div>
        <hr />
        <footer>
            <div class="container">
                <p>@DateTime.Now</p>
                <p>2015 Edward Waked - ASP.NET Resume</p>
            </div>
        </footer>
        <a href="#top" class="go-to-top">Top</a>
    </div>

    <!-- SCRIPTS -->
    <script src="/Scripts/jquery.js"></script>
    <script src="/Scripts/jquery.easing.min.js"></script>
    <script src="/Scripts/bootstrap.min.js"></script>
    <script src="/Scripts/scripts.js"></script>

    @Scripts.Render("/bundles/jquery")
    @Scripts.Render("/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
