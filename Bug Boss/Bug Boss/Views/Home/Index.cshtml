@{
    ViewBag.Title = "Demo Login";
}
<div class="container">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6 jumbotron text-center">
            <h1>Bug Boss</h1>
            <h4>Don't be pestered by problems - find solutions</h4>
        </div>
        <div class="col-md-3"></div>
    </div>

        @if (!User.Identity.IsAuthenticated)
        {
            if (!User.IsInRole("Administrator") || !User.IsInRole("Developer") || !User.IsInRole("Project Manager") || !User.IsInRole("Submitter"))
            {
                <div class="row">
                    <div class="text-center">
                        <div class="col-md-12">
                            <p>You can view the different ways this issue tracking and management software works for various users below.</p>
                        </div>
                        <br />
                        <div class="col-md-12">
                            <p>Pick a user role and see what priveledges they are allowed within the software.</p>
                        </div>
                        <br />
                        <div class="col-md-12">
                            <p>* To try a different user please log out first. You will be redirected to this screen *</p>
                        </div>
                        <br />
                    </div>
                </div>
            <br />
    <div class="row container" style="text-align:center">
        @*Admin*@

        <div class="panel-body col-md-3">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <form role="form">
                    @Html.Hidden("Email", "admin@bugboss.com", new { @class = "form-control" })

                    @Html.Hidden("Password", "Password-1", new { @class = "form-control" })

                    <div class="button">
                        <button class="btn btn-lg center-block" type="submit">
                            Administrator
                        </button>
                    </div>
                </form>
            }
        </div>

        @*Project Manager*@

        <div class="panel-body col-md-3">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <form role="form">
                    @Html.Hidden("Email", "projectmanager@bugboss.com", new { @class = "form-control" })

                    @Html.Hidden("Password", "Password-1", new { @class = "form-control" })

                    <div class="button">
                        <button class="btn btn-lg center-block" type="submit">
                            Project Manager
                        </button>
                    </div>
                </form>
            }
        </div>

        @*Developer*@

        <div class="panel-body col-md-3">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <form role="form">

                    @Html.Hidden("Email", "developer@bugboss.com", new { @class = "form-control" })

                    @Html.Hidden("Password", "Password-1", new { @class = "form-control" })

                    <div class="button">
                        <button class="btn btn-lg center-block" type="submit">
                            Developer
                        </button>
                    </div>
                </form>
            }
        </div>

        @*Submitter*@

        <div class="panel-body col-md-3">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <form role="form">

                    @Html.Hidden("Email", "submitter@bugboss.com", new { @class = "form-control" })

                    @Html.Hidden("Password", "Password-1", new { @class = "form-control" })

                    <div class="button">
                        <button class="btn btn-lg center-block" type="submit">
                            Submitter
                        </button>
                    </div>
                </form>
            }
        </div>
    </div>
            }
        }
    
</div>