@model IEnumerable<Bug_Boss.Models.Ticket>

@{
    ViewBag.Title = "Tickets";
}

<h2>Tickets</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table id="ticketTable" class="display">
    <thead>
        <tr>
            <th>Name</th>
            <th>Status</th>
            <th>Priority</th>
            <th>Type</th>
            <th>Assigned To</th>
            <th>Assigned By</th>
            <th>Project</th>
            <th>Created</th>
            <th>Updated</th>
            <th>More Info</th>
            <th></th>
        </tr>
    </thead>
    <tbody>

@foreach (var item in Model) {

        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TicketStatus.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TicketPriority.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TicketType.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AssignedUser.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OwnerUser.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Project.Name)
            </td>
            
            
            
            
            <td>
                @item.Created.ToString("dddd, dd MMM yyyy h:mm tt")
            </td>
            <td>
                @if (item.Updated != null)
                {
                    @item.Updated
                }
                
               
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id=item.Id }) 
            </td>
            <td></td>
        </tr>
}
    </tbody>
</table>
@section Scripts {
    <script>
        $(document).ready(function () {
            $('#ticketTable').DataTable();
        });
    </script>
    }